{
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ]
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch",
        "--ignore-robots-txt"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory-python": {
      "command": "uvx",
      "args": [
        "--quiet",
        "mcp-memory-py"
      ],
      "env": {
        "MEMORY_FILE_PATH": "C://Users//CHEDBEZ//OneDrive - ABB//Documents//memory.json"
      }
    }
    {{- if .config.use_bitwarden}}
    
    ,"tavily-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp@0.1.2"
      ],
      "env": {
        "TAVILY_API_KEY": "{{ (bitwardenFields "item" "7e4adc0c-51d8-444d-a289-b280009fa9c2").default.value }}"
      }
    }

    ,"jina-ai-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "jina-ai-mcp-server"
      ],
      "env": {
        "JINA_API_KEY": "{{ (bitwardenFields "item" "eeeb723f-3ef2-4b94-9c90-b280009ff820").default.value }}"
      }
    }

    {{- end}}
  }
}